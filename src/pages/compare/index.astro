---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Compare Hardware - XBenchmarks">
	<section class="hero">
		<h1>Compare Hardware</h1>
		<p class="intro">
			Select a category to compare different models side-by-side.
		</p>

		<div
			class="grid"
			style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); margin-top: var(--space-6);"
		>
			<a
				href="/compare/cpu"
				class="card"
				aria-label="Compare CPUs"
			>
				<h2>CPUs</h2>
				<p>
					Compare processors based on benchmarks and technical specifications.
				</p>
				<span class="arrow">&rarr;</span>
			</a>
			<a
				href="/compare/gpu"
				class="card"
				aria-label="Compare GPUs"
			>
				<h2>GPUs</h2>
				<p>
					Compare graphics cards based on performance and features.
				</p>
				<span class="arrow">&rarr;</span>
			</a>
			<a
				href="/compare/laptop"
				class="card"
				aria-label="Compare Laptops"
			>
				<h2>Laptops</h2>
				<p>
					Compare laptops based on their specifications and performance.
				</p>
				<span class="arrow">&rarr;</span>
			</a>
		</div>
	</section>
</Layout>
<style>
	.hero {
		padding: var(--space-6) 0;
	}

	.intro {
		font-size: var(--text-lg);
		color: var(--color-text-muted);
		max-width: 60ch;
	}

	.card {
		display: flex;
		flex-direction: column;
		padding: var(--space-4);
		border: var(--border-primary);
		text-decoration: none;
		color: var(--color-text);
		transition: transform 0.1s ease;
	}

	.card:hover {
		background-color: var(--color-surface);
		transform: translateY(-2px);
		box-shadow: 2px 2px 0 var(--color-border);
	}

	.card h2 {
		font-size: var(--text-2xl);
		margin-bottom: var(--space-2);
	}

	.card p {
		color: var(--color-text-muted);
		margin-bottom: var(--space-4);
		flex-grow: 1;
	}

	.arrow {
		align-self: flex-end;
		font-size: var(--text-xl);
	}
</style>
