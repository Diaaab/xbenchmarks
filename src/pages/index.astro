---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Electrical Escape - Hardware Database">
	<section class="hero">
		<h1>The Hardware Database</h1>
		<p class="intro">
			Detailed profiles and comparisons for Laptops, CPUs, and GPUs.
		</p>

		<div
			class="grid"
			style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); margin-top: var(--space-6);"
		>
			<a href={`${import.meta.env.BASE_URL}laptop-brands`} class="card">
				<h2>Laptops</h2>
				<p>Browse detailed specs and configurations by Brand.</p>
				<span class="arrow">&rarr;</span>
			</a>
			<a href={`${import.meta.env.BASE_URL}cpus`} class="card">
				<h2>CPUs</h2>
				<p>Processor benchmarks and technical comparisons.</p>
				<span class="arrow">&rarr;</span>
			</a>
			<a href={`${import.meta.env.BASE_URL}gpus`} class="card">
				<h2>GPUs</h2>
				<p>Graphics card performance and specifications.</p>
				<span class="arrow">&rarr;</span>
			</a>
		</div>
	</section>
</Layout>

<style>
	.hero {
		padding: var(--space-6) 0;
	}

	.intro {
		font-size: var(--text-lg);
		color: var(--color-text-muted);
		max-width: 60ch;
	}

	.card {
		display: flex;
		flex-direction: column;
		padding: var(--space-4);
		border: var(--border-primary);
		text-decoration: none;
		color: var(--color-text);
		transition: transform 0.1s ease;
	}

	.card:hover {
		background-color: var(--color-surface);
		transform: translateY(-2px);
		box-shadow: 2px 2px 0 var(--color-border);
	}

	.card h2 {
		font-size: var(--text-2xl);
		margin-bottom: var(--space-2);
	}

	.card p {
		color: var(--color-text-muted);
		margin-bottom: var(--space-4);
		flex-grow: 1;
	}

	.arrow {
		align-self: flex-end;
		font-size: var(--text-xl);
	}
</style>
